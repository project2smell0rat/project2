<!-- ADD ITEM FORM -->
<div class="row">
    <div class="column col-lg-8 mx-auto">
        <h4>Add a New Item</h4>
        <form>
            <div class="form-row">
                <div class="form-group col-lg-8">
                    <label for="item-name">Item Name</label>
                    <input type="text" class="form-control" id="item-name">
                </div>
                <div class="form-group col-lg-2">
                    <label for="charge">Quantity</label>
                    <input type="text" class="form-control" id="charge">
                </div>
                <div class="form-group col-lg-2">
                    <label for="quantity">Charge</label>
                    <input type="text" class="form-control" id="quantity">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-12">
                    <label for="item-description">Item Description</label>
                    <textarea class="form-control" id="item-description" rows="3"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add</button>
        </form>
    </div>
</div>